<% provide(:title, "Welcome") %>
<div class="jumbotron">
  <h1>ImgStore</h1>
  <h3>MMS image uploading + image storage</h3>
  <p>
    <% if user_signed_in? %>
      <%= link_to 'Upload', '/image/new', class: "btn btn-lg btn-primary" %>
    <% else %>
      <%= link_to 'Sign up!', '/users/sign_up', class: "btn btn-lg btn-primary" %>
      <%= link_to 'Login', '/users/sign_in', class: "btn btn-lg btn-default" %>
    <% end %>
  </p>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">MMS Phone Number</div>
      <div class="panel-body">
        <h2>+1 267 274 4480</h2>
      </div>
    </div>
  </div>
</div>
