<%= provide(:title, "Image #{@image.random_url}") %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="thumbnail">
      <a href="<%= @image.document.url(:largest) %>"><%= image_tag(@image.document.url(:medium), class: "img-responsive img-rounded center-block") %></a>
      <div class="caption">
        <p class="text-center">
          <%= link_to "XXL", @image.document.url(:largest), class: "btn btn-xs btn-primary" %>
          <%= link_to "XL", @image.document.url(:xlarge), class: "btn btn-xs btn-primary" %>
          <%= link_to "L", @image.document.url(:large), class: "btn btn-xs btn-primary" %>
          <%= link_to "M", @image.document.url(:medium), class: "btn btn-xs btn-primary" %>
          <%= link_to "S", @image.document.url(:small), class: "btn btn-xs btn-primary" %>
          <%= link_to "Thumb", @image.document.url(:thumbnail), class: "btn btn-xs btn-primary" %>
        </p>
        <h5> Original File Name: <%= @image.document_file_name %></h5>
        <h5 class="text-muted">Uploaded on <%= @image.created_at.getlocal("-05:00").strftime("%c EST") %></h5>
        <%= link_to "Delete Image", "/image/#{@image.random_url}", :method => :delete, class: "btn btn-sm btn-danger center-block" %>
      </div>
    </div>
  </div>
</div>
