<%= provide(:title, "My Images") %>
<% if @images.empty? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well well-lg">
      <h4><span class="glyphicon glyphicon-alert"></span>&nbsp;&nbsp;&nbsp;No images currently uploaded!</h4>
    </div>
  </div>
</div>
<% else %>
  <% @images.each_slice(6) do |imgslice| %>
    <div class="row">
    <% imgslice.each do |img| %>
      <div class="col-sm-2 col-md-2">
        <div class="thumbnail">
          <a href="/image/<%= img.random_url %>"><%= image_tag(img.document.url(:thumbnail), class: "img-responsive img-rounded center-block") %></a>
          <div class="caption">
            <h5 class="text-muted text-center"><%= link_to "Image #{img.random_url}", "/image/#{img.random_url}" %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %> 
<% end %>
